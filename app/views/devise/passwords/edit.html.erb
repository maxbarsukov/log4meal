<% content_for :title do %>
  Password
<% end %>

<div class="columns is-centered mt-6">
  <div class="column is-one-third">
    <h1 class="is-size-2 has-text-weight-bold mb-3">Change your password</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password", class: "label"  %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password", class: "label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="mt-6">
        <span class="actions">
          <%= f.submit "Change my password", class: "button is-success" %>
        </span>
        <%= link_to "Back", :back, class: "button is-grey-dark is-outlined is-centered" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
