<% content_for :title do %>
  Password
<% end %>
<div class="columns is-centered mt-6">
  <div class="column is-one-third">
    <h1 class="is-size-2 has-text-weight-bold mb-3">Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <div class="mt-6">
        <span class="actions">
          <%= f.submit "Send me reset password instructions", class: "button is-success" %>
        </span>
        <%= link_to "Back", :back, class: "button is-grey-dark is-outlined is-centered" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
