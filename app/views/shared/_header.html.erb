<section class="hero has-background-grey-dark is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to root_path, class: "navbar-item" do %>
            <%= image_tag "logo.svg", alt: "logo" %>
            <span class="has-text-weight-bold is-size-4 ml-4 has-text-success">log4meal</span>
          <% end %>
        </div>
        <div id="navbarMenuHeroC" class="navbar-menu">
          <div class="navbar-end">
            <span class="navbar-item mt-1">
              <span class="is-size-2">
                <%=link_to 'Create new entry', new_entry_path, class: 'button is-success' %>
                <%= link_to 'Log In', new_user_session_path, class: "button is-grey" %>
                <%= link_to 'Sign Up', new_user_registration_path, class: "button is-success" %>
              </span>
            </span>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title has-text-success">
        <% if content_for :title %>
          <%= yield :title %>
        <% else %>
          log4meal
        <% end %>
      </h1>
    </div>
  </div>
</section>
