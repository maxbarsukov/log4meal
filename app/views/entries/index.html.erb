<% content_for :title do  %>
  log4meal &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns is-multiline is-centered mt-6">
  <% if @entries.empty? %>
    <div class="is-centered has-text-weight-bold is-size-4">
      No entries for today
    </div>
  <% end %>
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title has-text-grey-dark has-background-success"><%= entry.meal_type %></p>
        </header>
        <div class="card-content">
          <div class="content">
            <p><span class="has-text-weight-bold"><%= entry.calories %></span> calories</p>
            <p><span class="has-text-weight-bold"><%= entry.proteins %></span> grams of protein</p>
            <p><span class="has-text-weight-bold"><%= entry.carbohydrates %></span> grams of carbohydrates</p>
            <p><span class="has-text-weight-bold"><%= entry.fats %></span> grams of fat</p>
            <p class="is-italic">Logged <%= time_ago_in_words(entry.created_at) %> ago</p>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', entry, class: "card-footer-item" %>
          <%= link_to 'Edit', edit_entry_path(entry), class: "card-footer-item" %>
          <%= link_to 'Delete', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="columns is-centered is-mobile mt-6 mb-6">
    <%= link_to "View all entries", archives_index_path, class: "button is-grey-dark is-outlined is-centered" %>
</div>
